{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"],
      "env": [
        "GRAPHQL_SCHEMA_PATH",
        "NODE_ENV",
        "GOOGLE_ANALYTICS_ID",
        "NEXT_PUBLIC_API_KEY"
      ]
    },
    "test": {
        "dependsOn": ["build"],
        "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint": {},
    "generate": {}
  },
  "globalDependencies": [".env"]
}